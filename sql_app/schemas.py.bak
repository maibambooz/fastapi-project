from pydantic import BaseModel


class loanBase(BaseModel):
    title: str
    description: str | None = None


class loanCreate(loanBase):
    pass


class Loan(loanBase):
    id: int
    owner_id: int

    class Config:
        orm_mode = True


class UserBase(BaseModel):
    email: str


class UserCreate(UserBase):
    password: str


class User(UserBase):
    id: int
    is_active: bool
    items: list[Item] = []

    class Config:
        orm_mode = True